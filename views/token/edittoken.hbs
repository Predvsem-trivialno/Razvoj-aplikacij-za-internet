 <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit selected token for box {{boxId}}</p>

                <form class="mx-1 mx-md-4" action="/token/update/{{_id}}" method="post">
                  <input type="text" name="postboxId" value="{{boxId}}" hidden/>

                  <div class="d-flex flex-row align-items-center mb-2">
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="holder" name="holder" class="form-control" value="{{userId.username}}" readonly/>
                      <i class="fa-solid fa-user"></i>
                      <label class="form-label" for="holder">Token holders cannot be changed</label>
                    </div>
                  </div>

                  <div class="form-outline flex-fill mb-0 mb-2">
                    <input type="text" id="name" name="name" class="form-control" value="{{name}}"/>
                    <i class="fa-solid fa-file-signature"></i>
                    <label class="form-label" for="name">Change token's nickname</label>
                  </div>

                  <div class="form-outline flex-fill mb-0 mb-2">
                    <input type="datetime-local" id="expiration" name="expiration" class="form-control"/>
                    <i class="fa-solid fa-calendar-days"></i>
                    <label class="form-label" for="expiration">Select expiration date</label>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" style="background-color: #3b5998;" class="btn btn-primary btn-lg">Edit</button>
                  </div>

                </form>

                {{#if warning}}
                    <p class="text-center h6 fw-bold text-danger">{{warning}}</p>
                {{/if}}
              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="/images/registration.jpeg"
                  class="img-fluid" alt="PriÅ¡lo je do napake.">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>