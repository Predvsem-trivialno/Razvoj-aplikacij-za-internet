 <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-200">
      <div class="col-lg-12 col-xl-12">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
                <p class="text-center h2 fw-bold mb-5 mx-1 mx-md-10 mt-4">Access tokens for Box {{boxId}}</p>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>User</th>
                        <th>Name</th>
                        <th>Expiry</th>
                        <th>Edit</th>
                        <th>Remove</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each tokens}}
                        <tr>
                            <td>{{userId.username}}</td>
                            <td>{{name}}</td>
                            <td>{{dateFormat dateExpiry}}</td>
                            <td>
                              <a href="/token/edit/{{_id}}" class="btn btn-warning border-dark"> <i class="fas fa-plus"></i></a>
                            </td>
                            <td>
                              <a href="/token/remove/{{_id}}/tmp/{{postboxId}}" class="btn btn-danger border-dark" onclick="return confirm('Are you sure?')"> <i class="fas fa-minus"></i></a>
                            </td>
                            </tr>
                    {{/each}}
                    </tbody>
                </table>
                <div class="m-3">
                    <a href="/token/add/{{boxId}}" class="btn btn-success mr-10"><i class="fas fa-solid fa-plus"></i></a>
                </div>
                <div class="m-3">
                    <a href="/postbox/show" class="btn btn-secondary padding-15"><i class="fas fa-solid fa-person-walking-arrow-loop-left"></i></a>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>